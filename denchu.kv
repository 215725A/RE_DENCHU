<StartScene>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size

        Label:
            id: label1
            size_hint_y: 1.5
            font_size: 70
            text: 'DENCHU QUEST'
        
        BoxLayout:
            
            Button:
                id: button1
                size_hint_x: 1
                font_size: 60
                text: 'Game Start'
                on_press: root.PressStart()
            
            Button:
                id: button2
                size_hint_x: 1
                font_size: 60
                text: 'Game Quit'
                on_press: app.stop()


<SelectScene>:
    BoxLayout:
        orientation: 'vertical'
        size: root.size

        Label:
            id: label2
            size_hint_y: 0.5
            text: 'デンチュウを選んでください'
        
        BoxLayout:
            Image:
                source: "./images/denchu_red.png"
                allow_stretch: True
                kepp_ratio: True
            
            Image:
                source: "./images/denchu_green.png"
                allow_stretch: True
                kepp_ratio: True

            Image:
                source: "./images/denchu_yellow.png"
                allow_stretch: True
                kepp_ratio: True
        
        BoxLayout:
            Button:
                id: RED_DENCHU
                size_hint_x: 1
                size_hint_y: 0.82
                font_size: 40
                text: '赤色デンチュウ'
                on_press: root.PressRed()

            Button:
                id: GREEN_DENCHU
                size_hint_x: 1
                size_hint_y: 0.82
                font_size: 40
                text: '緑色デンチュウ'
                on_press: root.PressGreen()
            
            Button:
                id: YELLOW_DENCHU
                size_hint_x: 1
                size_hint_y: 0.82
                font_size: 40
                text: '黄色デンチュウ'
                on_press: root.PressYellow()
            
        Button:
            id: BACK
            size_hint_y: 0.3
            font_size: 40
            text: '戻る'
            on_press: root.PressBack()


<DecideRed>
    BoxLayout:
        orientation: 'vertical'
        size: root.size

        Label:
            size_hint_y: 0.5
            text: 'このデンチュウを選ぶ?'
        
        Image:
            source: "./images/denchu_red.png"
            allow_stretch: True
            kepp_ratio: True
        
        Label:
            size_hint_y: 0.5
            text: '赤色デンチュウ: 緑色のモンスターに強く、黄色のモンスターに弱い'
        
        Button:
            size_hint_x: 1
            size_hint_y: 0.665
            font_size: 40
            text: "このデンチュウに決めた!"
            on_press: root.PressDecide()
        
        Button:
            size_hint_x: 1
            size_hint_y: 0.665
            font_size: 40
            text: "選び直す"
            on_press: root.PressBack()


