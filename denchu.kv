<BattleScene>
    BoxLayout:
        orientation: 'vertical'
        size: root.size

        Image:
            size_hint_y: 2.5
            source: root.getSceneImage()
            allow_stretch: True
            kepp_ratio: True
        
        BoxLayout:
            Label:
                id: labelHP1
                size_hint_y: 1
                text: root.getDenchuName() + "のHP: " + root.getDenchuHP() + "\n" + root.getDenchuName() + "の攻撃力: " + root.getDenchuPower()

            Label:
                id: labelHP2
                size_hint_y: 1
                text: root.getOpponentName() + "のHP: " + root.getOpponentHP() + "\n" + root.getOpponentName() + "の攻撃力: " + root.getOpponentPower() 
        
        Button:
            size_hint_y: 1.3
            text: "戦う" 
            on_press:
                root.PressBattle()
                labelHP1.text = root.getDenchuName() + "のHP: " + root.getDenchuHP() + "\n" + root.getDenchuName() + "の攻撃力: " + root.getDenchuPower()
                labelHP2.text = root.getOpponentName() + "のHP: " + root.getOpponentHP() + "\n" + root.getOpponentName() + "の攻撃力: " + root.getOpponentPower() 

        BoxLayout:
            Button:
                size_hint_x: 1
                text: "アイテム"
                on_press: root.PressItem()

            Button:
                size_hint_x: 1
                text: "逃げる"
                on_press: root.PressEscape()


<SkillScene>
    BoxLayout:
        orientation: 'vertical'
        size: root.size

        Image:
            size_hint_y: 3.05
            source: root.getSceneImage()
            allow_stretch: True
            kepp_ratio: True

        Label:
            size_hint_y: 1.2
            text: "技を選択してください"

        BoxLayout:
            Button:
                size_hint_y: 1
                text: root.getSkillName1()
                on_press: root.PressSkill1()

            Button:
                size_hint_y: 1
                text: root.getSkillName2()
                on_press: root.PressSkill2()

        BoxLayout:
            Button:
                size_hint_y: 1
                text: root.getSkillName3()
                on_press: root.PressSkill3()
            
            Button:
                size_hint_y: 1
                text: root.getSkillName4()
                on_press: root.PressSkill4()

        Button:
            size_hint_y: 0.8
            text: "戻る"
            on_press: root.PressBack()


<ItemScene>
    BoxLayout:
        orientation: 'vertical'
        size: root.size

        Image:
            size_hint_y: 2.27
            source: root.getSceneImage()
            allow_stretch: True
            kepp_ratio: True

        Label:
            size_hint_y: 0.99
            text: "どのアイテムを使用する?"

        BoxLayout:
            Button:
                size_hint_y: 1.1
                text: root.getItemName1()
                on_press: root.PressItem1()

            Button:
                size_hint_y: 1.1
                text: root.getItemName2()
                on_press: root.PressItem2()
        
        Button:
            text: "戻る"
            on_press: root.PressBack()


<EnemyScene>
    BoxLayout:
        orientation: 'vertical'
        size: root.size

        Image:
            size_hint_y: 1.5
            source: root.getSceneImage()
            allow_stretch: True
            kepp_ratio: True

        Label:
            size_hint_y: 0.6
            text: root.getOpponentName() + "の攻撃!"
        
        Button:
            size_hint_y: 1.37
            text: "自分のターンへ"
            on_press: root.PressBattle()



<EscapeScene>
    BoxLayout:
        orientation: 'vertical'
        size: root.size

        Label:
            text: "You Lose"
            font_size: 60
            color: [1, 0, 0, 1]

        Label:
            text: "戦闘から離脱した"

        Button:
            size_hint_y: 1.3
            text: "ゲームを終了する"
            on_press: app.stop()


<LoseScene>
    BoxLayout:
        orientation: 'vertical'
        size: root.size

        Label:
            text: "You Lose"
            font_size: 60
            color: [1, 0, 0, 1]

        Label:
            text: root.getDenchuName() + "は倒れた"
        
        Button:
            size_hint_y: 1.3
            text: "ゲームを終了する"
            on_press: app.stop()


<WinScene>
    BoxLayout:
        orientation: 'vertical'
